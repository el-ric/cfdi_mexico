<?xml version="1.0"?>
<odoo>

    
        <record id="res_company_form_inherit" model="ir.ui.view">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <field name="website" position="after">

				<group colspan="4">
                
					<newline/>
                    <field name="c_regimenfiscal" colspan="2"/>
                    <field name="c_codigopostal" colspan="2"/>
					<field name="usuario_facturacion" colspan="2"/>
					<field name="cuenta_facturacion"/>
					<field name="contrasena_facturacion"/>

					<field name="ip_servidor"/>
					<field name="email_emisor"/>
					<field name="folder_base" string="Folder base" help="Archivos PDF y XML"/>
                    <field name="api_factura"/>
					</group>
                </field>
            </field>
        </record>
		
</odoo>